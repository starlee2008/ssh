<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
    <constant name="struts.i18n.encoding" value="utf-8"></constant>
    <package name="default" namespace="/" extends="struts-default">

        <action name="control" class="cap.action.ControlAction" method="control">
            <result name="success">/tag.jsp</result>
        </action>
        <action name="fill" class="cap.action.RegisterAction" method="fill">
            <result name="success">/register.jsp</result>
        </action>

        <action name="register" class="cap.action.RegisterAction" method="register">
            <result name="success">/result.jsp</result>
        </action>


    </package>


</struts>